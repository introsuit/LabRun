<Window x:Class="LabRun.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LabRun" Height="579.671" Width="577.537" Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Active}" Value="False">
                    <Setter Property="Background" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Menu Height="22" Name="menu1" Width="200" Margin="0, 0, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top"  Background="White">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" InputGestureText="Alt+F4" Click="MenuItemExit_Click">
                    <MenuItem.Icon>
                        <Image Source="Images/ic_menu_exit.png" Width="20" Height="20"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Update Client List" Click="Button_Click_1"/>
                <!--<MenuItem Header="_Close" IsCheckable="true"/>
                <MenuItem Header="_Save" IsCheckable="true"/>-->
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About LabRun" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <DataGrid IsReadOnly="True" SelectionMode="Extended" AutoGenerateColumns="false" Name="dgrClients" HorizontalAlignment="Left" Margin="11,110,0,0" VerticalAlignment="Top" Height="246" Width="168" SelectionChanged="dgrClients_SelectionChanged" SelectedCellsChanged="dgrClients_SelectedCellsChanged" >
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Booth No"  Binding="{Binding BoothNo}"/>
                <DataGridTextColumn Header="Comp. Name" Binding="{Binding ComputerName}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Lab Clients:" HorizontalAlignment="Left" Margin="11,84,0,0" VerticalAlignment="Top"/>
        <TabControl Name="tabControl1"  HorizontalAlignment="Left" Height="332" Margin="196,24,0,0" VerticalAlignment="Top" Width="365">
            <TabItem Header="PsychoPy" Name="tabPsy">
                <Grid Background="#FFE5E5E5">

                </Grid>
            </TabItem>
            <TabItem Header="E-Prime" Name="tabEPrime">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Z-Tree" Name="tabZTree">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Chrome" Name="tabChrome">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Label Content="Select Lab Clients:" HorizontalAlignment="Left" Margin="10,354,0,0" VerticalAlignment="Top"/>



        <Label x:Name="lblStatus" Content="Idle" HorizontalAlignment="Left" Margin="198,357,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbBxLabSelect" SelectedIndex="0" HorizontalAlignment="Left" Margin="11,57,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="cmbBxLabSelect_SelectionChanged">

            <ComboBoxItem Name="lab1" Tag="lab1">Computer lab no. 1</ComboBoxItem>
            <ComboBoxItem Name="lab2" Tag="lab2">Computer lab no. 2</ComboBoxItem>
            <ComboBoxItem Name="both" Tag="both">Both labs</ComboBoxItem>
        </ComboBox>

       
        

        <Label Content="Select lab:" HorizontalAlignment="Left" Margin="11,24,0,0" VerticalAlignment="Top"/>
        <ComboBox SelectedIndex="0" Name="cmbSelectionClients" HorizontalAlignment="Left" Margin="11,385,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="cmbSelectionClients_SelectionChanged">


            <ComboBoxItem Tag="none">None</ComboBoxItem>
            <!--<ComboBoxItem Tag="custom">Custom</ComboBoxItem>-->
            <ComboBoxItem Tag="odd">Odd</ComboBoxItem>
            <ComboBoxItem Tag="even">Even</ComboBoxItem>
            <ComboBoxItem Tag="zigzag">Zig-Zag</ComboBoxItem>
            <ComboBoxItem Tag="zagzig">Zag-Zig</ComboBoxItem>
            <ComboBoxItem Tag="all">All</ComboBoxItem>
        </ComboBox>
        <GroupBox Header="Power Options" HorizontalAlignment="Left" Margin="11,453,0,0" VerticalAlignment="Top" Height="61" Width="202">
            <Grid>
                <Button IsEnabled="False" Name="btnStartUp" Height="23" Content="Startup" Margin="0,9,105.667,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Right" Width="75" RenderTransformOrigin="3.56,0.515"/>
                <Button IsEnabled="False" Content="Shutdown" Height="23" HorizontalAlignment="Left" Margin="106,9,0,0" Name="btnShutdown" VerticalAlignment="Top" Width="75" Click="btnShutdown_Click" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Input Options" HorizontalAlignment="Left" Margin="255,376,0,0" VerticalAlignment="Top" Height="61" Width="306">
            <Grid Margin="0,0,0,0">
                <Button IsEnabled="False" Name="btnInputDisable" Content="Disable Input" HorizontalAlignment="Left" Margin="109,11,0,0" VerticalAlignment="Top" Width="75" Click="btnInputDisable_Click"/>
                <Button IsEnabled="False" Name="btnInputEnable" Content="Enable Input" HorizontalAlignment="Left" Margin="210,11,0,0" VerticalAlignment="Top" Width="75" Click="btnInputEnable_Click"/>
                <Button x:Name="BtnScrShare" Content="Share screen" HorizontalAlignment="Left" Margin="15,11,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Network Options" HorizontalAlignment="Left" Margin="255,453,0,0" VerticalAlignment="Top" Height="61" Width="306">
            <Grid Margin="0,0,0,0">
                <Button IsEnabled="False" Name="btnNetDisable" Content="Disable Net" HorizontalAlignment="Left" Margin="110,6,0,0" VerticalAlignment="Top" Width="75" Click="btnNetDisable_Click"/>
                <Button IsEnabled="False" Name="btnNetEnable" Content="Enable Net" HorizontalAlignment="Left" Margin="210,6,0,0" VerticalAlignment="Top" Width="75" Click="btnNetEnable_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
