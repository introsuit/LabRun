<Window x:Class="LabRun.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LabRun" Height="380" Width="585">
    <Grid>

        <Button Content="Shutdown" Height="20" HorizontalAlignment="Left" Margin="10,321,0,0" Name="btnShutdown" VerticalAlignment="Top" Width="75" Click="btnShutdown_Click" />
        <DataGrid IsReadOnly="True" SelectionMode="Extended" AutoGenerateColumns="false" Name="dgrClients" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" Height="246" Width="168">           
            <DataGrid.Columns>
                <DataGridTextColumn Header="Comp. Name" Binding="{Binding ComputerName}"/>
                <DataGridTextColumn Header="Booth No"  Binding="{Binding BoothNo}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Lab Clients:" HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top"/>
        <TabControl HorizontalAlignment="Left" Height="246" Margin="195,24,0,0" VerticalAlignment="Top" Width="365">
            <TabItem Header="PsychoPy">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Browse" Height="30" HorizontalAlignment="Left" Margin="10,10,0,0" Name="button1" VerticalAlignment="Top" Width="76" Click="button1_Click" />
                    <Label Content="..." Height="28" HorizontalAlignment="Left" Margin="91,10,0,0" Name="label1" VerticalAlignment="Top" />
                    <Button IsEnabled='False' Content="Run" Height="28" HorizontalAlignment="Left" Margin="10,48,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
                    <Button IsEnabled='True' Content="Kill" Height="28" HorizontalAlignment="Left" Margin="91,48,0,0" Name="btnKill" VerticalAlignment="Top" Width="75" Click="btnKill_Click" />
                    <Button Content="Get Results" HorizontalAlignment="Left" Margin="10,179,0,0" VerticalAlignment="Top" Width="75" Name="btnGetResults" Height="24" Click="btnGetResults_Click" />
                </Grid>
            </TabItem>
            <TabItem Header="E-Prime">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Z-Tree">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button Content="Even" Name="btnEven" HorizontalAlignment="Left" Margin="10,292,0,0" VerticalAlignment="Top" Width="75" Click="btnEven_Click"/>
        <Button Content="Odd" Name="btnOdd" HorizontalAlignment="Left" Margin="103,292,0,0" VerticalAlignment="Top" Width="75" Click="btnOdd_Click" />
        <Label Content="Select:" HorizontalAlignment="Left" Margin="10,268,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
