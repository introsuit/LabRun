
<UserControl x:Class="UserControls.ChromeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FFE5E5E5" Margin="0,0,-30,0">
        <Button IsEnabled='False' Content="Launch" Height="28" HorizontalAlignment="Left" Margin="10,102,0,0" Name="btnRun" VerticalAlignment="Top" Width="75" Click="btnRun_Click" />
        <Button IsEnabled='False' Content="Kill" Height="28" HorizontalAlignment="Left" Margin="90,102,0,0" Name="btnKill" VerticalAlignment="Top" Width="75"  />
        <Image Name="imgTest" HorizontalAlignment="Left" Height="100" Margin="220,103,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="urlTxtBox" HorizontalAlignment="Left" Height="23" Margin="10,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310"/>
        <Label Content="Enter URL to launch in Chrome:" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
